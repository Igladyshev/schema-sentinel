# Example environment variables for SQL Comparison
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# Snowflake Configuration
SNOWFLAKE_ACCOUNT=your_account_identifier
SNOWFLAKE_USER=your_username
SNOWFLAKE_PASSWORD=your_password
SNOWFLAKE_WAREHOUSE=your_warehouse
SNOWFLAKE_DATABASE=your_database
SNOWFLAKE_SCHEMA=your_schema
SNOWFLAKE_ROLE=your_role

# Optional: Comma-separated list of schemas to include in metadata extraction
# If not set, all schemas in the database will be included
# Example: SNOWFLAKE_SCHEMAS=PUBLIC,ANALYTICS,STAGING,MARTS
# SNOWFLAKE_SCHEMAS=

# Optional: Email domain for SSO authentication
# If set, will append @domain to system username
# SNOWFLAKE_EMAIL_DOMAIN=example.com

# Optional: Author name for generated reports
# REPORT_AUTHOR=your_name@example.com

# Optional: Snowflake Connection Options
# SNOWFLAKE_AUTHENTICATOR=externalbrowser  # For SSO
# SNOWFLAKE_PRIVATE_KEY_PATH=/path/to/key.p8  # For key-pair auth

# SQLite Configuration (for metadata storage)
SQLITE_DB_PATH=./resources/meta-db/metadata.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/tmp/sql-comparison.log

# Application Settings
TEMP_DIR=/tmp
